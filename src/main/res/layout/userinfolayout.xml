<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/userinfo"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:orientation="vertical"
        android:background="@drawable/roundlayoutbg"
        android:layout_marginTop="20sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_imag"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:src="@drawable/kamran1"
                    android:layout_marginTop="6sp"
                    android:layout_marginStart="5sp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textVie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/userinfoname_string"
                        android:textColor="#222"
                        android:layout_marginTop="10sp"
                        android:gravity="left"/>

                    <TextView
                        android:id="@+id/textVi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/userinfoemail_string"
                        android:textColor="#222"
                        android:layout_marginTop="10sp"
                        android:gravity="left"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="63dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_marginEnd="8sp"
                    android:layout_marginTop="4sp"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="16sp"
                android:baselineAligned="false">


                <LinearLayout
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tVi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/userinfo_Distance"
                        android:textColor="#222"
                        android:layout_marginTop="10sp"
                        android:gravity="left"/>

                    <TextView
                        android:id="@+id/teVi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/userinfodistance"
                        android:textColor="#222"
                        android:layout_marginTop="10sp"
                        android:gravity="left"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tetVie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/userinfo_location_string"
                        android:textColor="#222"
                        android:layout_marginTop="10sp"
                        android:gravity="left"/>

                    <TextView
                        android:id="@+id/tetVi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/userinfo_location"
                        android:textColor="#222"
                        android:layout_marginTop="10sp"
                        android:gravity="left"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ti"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/userinfo_phone"
                        android:textColor="#222"
                        android:layout_marginTop="10sp"
                        android:gravity="left"/>

                    <TextView
                        android:id="@+id/tV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/userinfo_phonenumber"
                        android:textColor="#222"
                        android:layout_marginTop="10sp"
                        android:gravity="left"/>
                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="16sp"
                android:baselineAligned="false">


                <LinearLayout
                    android:layout_width="234dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundedbutton"
                        android:text="@string/userinfo_start" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="63dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_local_phone_black_24dp"
                        android:layout_marginEnd="8sp"/>

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>