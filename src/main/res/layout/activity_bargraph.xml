<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Stats.BargraphActivity"
    android:id="@+id/bargraph_drawer_layout"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="80sp">

        <com.anychart.AnyChartView
            android:id="@+id/any_chart_view"
            android:layout_width="match_parent"
            android:layout_height="300sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20sp">
            <TextView
                android:layout_width="25sp"
                android:layout_weight="0.35"
                android:layout_height="40sp"
                android:text="@string/ordersdone_string"
                android:textSize="13sp"
                android:layout_marginStart="15sp"
                android:padding="10sp" />
            <EditText
                android:layout_width="0sp"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:hint="@string/tasks_string"
                android:inputType="text"
                android:padding="12sp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:autofillHints=""
                android:id="@+id/orderscompletedbargraph"
                android:enabled="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="25sp"
                android:layout_weight="0.35"
                android:layout_height="40sp"
                android:text="@string/Currentactivejobs_string"
                android:textSize="13sp"
                android:layout_marginStart="15sp"
                android:padding="10sp" />
            <EditText
                android:layout_width="0sp"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:hint="@string/tasks_string"
                android:inputType="text"
                android:padding="12sp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:autofillHints=""
                android:id="@+id/popupwindowclientname"
                android:enabled="false"/>
        </LinearLayout>


    </LinearLayout>

    <include
        layout="@layout/custom_action_barother"/>

</androidx.constraintlayout.widget.ConstraintLayout>