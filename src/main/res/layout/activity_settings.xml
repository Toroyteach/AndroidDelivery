<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.SettingsActivity"
    android:id="@+id/settings_drawer_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="80sp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000">
            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="260sp"
                android:scaleType="fitXY"
                android:src="@drawable/kamran"
                android:alpha="0.8"
                android:contentDescription="@string/todo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/circleviewprofile"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:src="@drawable/kamran1"
                    android:layout_marginTop="70sp"
                    android:layout_marginStart="5sp"
                    android:contentDescription="@string/todo" />
            </LinearLayout>

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0sp"
                android:layout_weight="0.35"
                android:layout_height="wrap_content"
                android:text="@string/name_string"
                android:textSize="14sp"
                android:layout_marginStart="15sp"
                android:padding="20sp"/>
            <EditText
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:hint="@string/name_string"
                android:inputType="textEmailAddress"
                android:padding="16sp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:autofillHints=""
                android:id="@+id/profileusername"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1sp"
            android:background="#ACACAC"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0sp"
                android:layout_weight="0.35"
                android:layout_height="wrap_content"
                android:text="@string/e_mail"
                android:textSize="14sp"
                android:layout_marginStart="15sp"
                android:padding="20sp"/>
            <EditText
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:hint="@string/e_mail"
                android:inputType="textEmailAddress"
                android:padding="16sp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:autofillHints=""
                android:id="@+id/profileemail"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1sp"
            android:background="#ACACAC"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/passwordstring"
                android:textSize="14sp"
                android:padding="20sp"
                android:layout_marginStart="15sp"
                android:id="@+id/myTextView" />
            <EditText
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:hint="@string/passwordstringhint"
                android:background="#00000000"
                android:padding="20sp"
                android:autofillHints=""
                android:id="@+id/profilepassword"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1sp"
            android:background="#ACACAC"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/number_string"
                android:textSize="14sp"
                android:padding="20sp"
                android:layout_marginStart="15sp" />
            <EditText
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="14sp"
                android:hint="@string/string_09763578977"
                android:background="#00000000"
                android:padding="20sp"
                android:autofillHints=""
                android:id="@+id/profilenumber"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1sp"
            android:background="#ACACAC"/>

        <Button
            android:id="@+id/updateprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/updatebtn_string" />

    </LinearLayout>

    <include
        layout="@layout/custom_action_barother"/>

</androidx.constraintlayout.widget.ConstraintLayout>